        insertUserIntoDatabase(user);
    }
    
    
    private void insertUserIntoDatabase(User user) {
        
        
    }
}
public class MyApp {
    public static void main(String[] args) {
        User user = new User("kendrick", "kendrick@example.com", "password");
        
        Authentication auth = new Authentication();
        if (auth.authenticateUser(user.getUsername(), user.getPassword())) {
            System.out.println("Authentication successful");
        } else {
            System.out.println("Authentication failed");
        }
        
        Registration reg = new Registration();
        reg.registerUser(user);
    }
}

